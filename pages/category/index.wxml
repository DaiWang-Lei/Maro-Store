<view class="cates">
  <searchInput />
  <view class="cates_container">
    <!-- 左侧标题 -->
    <scroll-view class="left_menu" scroll-y>
      <view wx:for="{{leftMenuList}}" wx:key="index" class="menu_item {{index==currentIndex?'active':''}}">{{item}}</view>
    </scroll-view>
    <!-- 右侧内容 -->
    <scroll-view class="right_content" scroll-y>
      <view class="goods_group" wx:for="{{rightContent}}" wx:for-item="item1" wx:for-index="index1" wx:key='item1.cat_id'>
        <view class="goods_title">
          <view class="delimiter">/</view>
          <view class="title">{{item1.cat_name}}</view>
          <view class="delimiter">/</view>
        </view>
        <view class="goods_list">
          <navigator wx:for="{{item1.children}}" wx:for-item="item2" wx:for-index="index2" wx:key='cat_id'>
            <image class="" src="{{item2.cat_icon}}" mode="widthFix" lazy-load></image>
            <view class="goods_name">{{item2.cat_name}}</view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>